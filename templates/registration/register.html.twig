{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <div class="container">
        <div class="card">
    <div class="form-block-wrapper">
        <h2>Register</h2>
        <hr class="separator"/>

        <div class="row">
            <div class="form-group col-md-12">
                    {{ form_row(form.username, {'attr': {'class': 'form-control required', 'placeholder': 'Username*', 'maxlength': 80}}) }}
            </div>
            <div class="form-group col-md-12">
                {{ form_row(form.password, {'attr': {'class': 'form-control required', 'placeholder': 'Password*', 'maxlength': 80}}) }}
            </div>
            <div class="form-group col-md-12">
                {{ form_row(form.email, {'attr': {'class': 'form-control required', 'placeholder': 'Email*', 'maxlength': 80}}) }}
            </div>

        </div>


        <div class="row">
            <div class="form-group col-md-12">
                {{ form_row(form.termsAccepted) }}
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Register!</button>
            </div>

        </div>
    </div>

    </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
